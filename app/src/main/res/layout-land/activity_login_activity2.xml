<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bck"
    android:orientation="horizontal"
    android:gravity="center"
    tools:context="com.example.markotranda.dnevnik.LoginActivity2">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password_field"
        android:hint="unesite lozinku"
        android:password="false"
        android:singleLine="true"
        android:textSize="30sp"
        android:textColor="#ff171717"
        android:textColorHighlight="#ff171717"
        android:textColorHint="#ff171717"
        android:textColorLink="#ff171717"
        android:background="#fff"
        android:layout_marginBottom="25dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/button_login"
        android:onClick="OnClickLogin"
        android:background="@drawable/unesi_lozinku"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="25dp" />

</LinearLayout>
